@model nebrangu.Models.OrderStatisticsViewModel

@{
    ViewData["Title"] = "Užsakymo Statistika";
}

<h1>Užsakymo statistikos langas</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DoneOrderCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoneOrderCount)
        </dd>
     
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LostDisputesCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LostDisputesCount)
        </dd>
        
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderSum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderSum)
        </dd>
        
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActiveDiscounts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActiveDiscounts)
        </dd>
        
    </dl>
    <h1>Neišsiųstų užsakymų sąrašas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NotSentOrders[0].OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotSentOrders[0].Sum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotSentOrders[0].DeliveryAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotSentOrders[0].DeliveryCity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotSentOrders[0].DeliveryPostalCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotSentOrders[0].DeliveryType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotSentOrders[0].PaymentMethod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotSentOrders[0].Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.NotSentOrders)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryCity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryPostalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentMethod.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>