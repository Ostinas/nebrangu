@model nebrangu.Models.ProductViewModel

@{
    ViewData["Title"] = "Prekių katalogas";
}

<h1>Prekių katalogas</h1>

<p>
    <a asp-action="Create">Prekės sukūrimas</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].RatingCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].OriginCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Weather.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Season.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginCountry)
            </td>
            <td>
				Mobilusis telefonas
            </td>
            <td>
				Samsung
            </td>
			<td>
                    @Html.DisplayFor(modelItem => item.Weather.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Season.Name)
            </td>
            <td>
				<a asp-action="AddProductToCart" asp-route-id="@item.Id">Pridėti į krepšelį</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Peržiūrėti</a>
            </td>
            <td>
                <a asp-action="DeletePage" asp-route-id="@item.Id">Ištrinti</a>
            </td>
        </tr>
}
    </tbody>
</table>

