@model IEnumerable<nebrangu.Models.Dispute>

@{
    ViewData["Title"] = "Ginčų sąrašas";
}

<p>
    <a asp-action="Create">Sukurti ginčą</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Problem)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Solution)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.SolutionScore)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Buyer)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Seller)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Problem.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Solution.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SolutionScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Buyer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seller.Name)
                </td>

            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detaliau</a>
            </td>
        </tr>
}
    </tbody>
</table>
